
@{
    ViewBag.Title = "Adding Sound Effects to your Games";
    ViewBag.Header = "HTML5 Audio Game";
}

@section styles {
    @Styles.Render("~/bundles/chaptersix/css")
}

@section scripts {
    @Scripts.Render("~/bundles/chaptersix/js")
}

<div id="game">
    <section id="menu-scene" class="scene">
        <a href="#game"><span>Play</span></a>
    </section>
    <section id="game-scene" class="scene">
        <canvas id="game-background-canvas" width="768" height="440">
            Sorry, your web browser does not support canvas content.
        </canvas>
        <canvas id="game-canvas" width="768" height="440"></canvas>
    </section>
</div>

<audio id="buttonover">
    <source src="~/Content/ChapterSix/media/button_over.wav" />
    <source src="~/Content/ChapterSix/media/button_over.ogg" />
    <!-- Any code for browser that does not support the audio tag -->
</audio>

<audio id="buttonactive">
    <source src="~/Content/ChapterSix/media/button_active.mp3" />
    <source src="~/Content/ChapterSix/media/button_active.ogg" />
    <!-- Any code for browser that does not support the audio tag -->
</audio>

<audio id="melody">
    <source src="~/Content/ChapterSix/media/minuet_in_g_melody.mp3" />
    <source src="~/Content/ChapterSix/media/minuet_in_g_melody.ogg" />
    <!-- Any code for browser that does not support the audio tag -->
</audio>

<audio id="base">
    <source src="~/Content/ChapterSix/media/minuet_in_g.mp3" />
    <source src="~/Content/ChapterSix/media/minuet_in_g.ogg" />
    <!-- Any code for browser that does not support the audio tag -->
</audio>